<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:orientation="horizontal" >

    <com.android.volley.util.NetworkImageView
        android:id="@+id/iv_thumb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_toLeftOf="@+id/wathclist_ib"
        android:layout_toRightOf="@+id/iv_thumb"
        android:text="Product Name"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_product_name"
        android:layout_below="@+id/tv_product_name"
        android:layout_toLeftOf="@+id/wathclist_ib"
        android:layout_toRightOf="@+id/iv_thumb"
        android:text="大成集團"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/wathclist_ib"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:src="@drawable/watchlist_button"
        android:contentDescription="Click to Watch"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>
    private static void addArticleTable(Schema schema) {
        Entity report = schema.addEntity("Article");
        report.addIdProperty();
        report.addStringProperty("body").notNull();
//        report.addStringProperty("category");
//        report.addStringProperty("category_id");
        report.addStringProperty("hits_daily");
        report.addStringProperty("hits_total");
        report.addStringProperty("article_id");
        report.addStringProperty("comments_count");
        report.addStringProperty("link");
        report.addStringProperty("public_at");
        report.addStringProperty("site_category");
//        report.addStringProperty("facebook");
        report.addStringProperty("thumb");
        report.addStringProperty("title");
        report.addStringProperty("user_name");
    }

   

}
